<%= form_with model: forecast_request, url: '/forecast', method: :get do |f| %>
        <div class="mb-3">
          <%= f.label :street, class: "form-label" %>
          <%= f.text_field :street, value: forecast_request.street, 
              class: "form-control #{forecast_request.errors[:street].any? ? 'is-invalid' : nil}", 
              placeholder: "Enter street address" %>
          <% if forecast_request.errors[:street].any? %>
            <div id="street-feedback" class="invalid-feedback d-block">
              <%= forecast_request.errors.full_messages_for(:street).first %>
            </div>
          <% end %>
        </div>
        <div class="mb-3">
          <%= f.label :city, class: "form-label" %>
          <%= f.text_field :city, value: forecast_request.city, 
              class: "form-control #{forecast_request.errors[:city].any? ? 'is-invalid' : nil}", 
              placeholder: "Enter city" %>
          <% if forecast_request.errors[:city].any? %>
            <div id="city-feedback" class="invalid-feedback d-block">
              <%= forecast_request.errors.full_messages_for(:city).first %>
            </div>
          <% end %>
        </div>
        <div class="mb-3">
          <%= f.label :state, class: "form-label" %>
          <%= f.text_field :state, value: forecast_request.state, 
              class: "form-control #{forecast_request.errors[:state].any? ? 'is-invalid' : nil}", 
              placeholder: "Enter state" %>
          <% if forecast_request.errors[:state].any? %>
            <div id="state-feedback" class="invalid-feedback d-block">
              <%= forecast_request.errors.full_messages_for(:state).first %>
            </div>
          <% end %>
        </div>
        <div class="mb-3">
          <%= f.label :zip_code, class: "form-label" %>
          <%= f.text_field :zip_code, value: forecast_request.zip_code, 
              class: "form-control #{forecast_request.errors[:zip_code].any? ? 'is-invalid' : nil}", 
              placeholder: "Enter ZIP code" %>
          <% if forecast_request.errors[:zip_code].any? %>
            <div id="zip_code-feedback" class="invalid-feedback d-block">
              <%= forecast_request.errors.full_messages_for(:zip_code).first %>
            </div>
          <% end %>
        </div>
        <div class="d-grid">
          <%= f.submit "Get Forecast", class: "btn btn-primary" %>
        </div>
      <% end %>